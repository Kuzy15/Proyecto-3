// Example particle systems

// smoke
particle_system wind
{
	material        	wind
	particle_width  	0.8
	particle_height 	0.8
	cull_each       	true
	quota           	1000
	billboard_type  	point
	sorted				true
    
	// Area emitter
	emitter Point
	{
		position 0 2 0
		angle 30
		emission_rate 400
		time_to_live 0.25
		direction 0 0 0
		
	}

	affector ColourImage
	{
		image windcolors.png
	}
	
	affector Scaler
	{
		rate 1.5
	}

}
