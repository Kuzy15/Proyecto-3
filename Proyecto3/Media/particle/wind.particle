// Example particle systems

// smoke
particle_system wind
{
	material        	wind
	particle_width  	0.8
	particle_height 	0.8
	cull_each       	true
	quota           	1000
	billboard_type  	point
	sorted				true
    
	// Area emitter
	emitter Point
	{
		position 0 1 0
		angle 35
		emission_rate 300
		time_to_live 0.3
		direction 0 0 0
		velocity_min 2
		velocity_max 5    	
	}

	affector ColourImage
	{
		image windcolors.png
	}
	
	affector Scaler
	{
		rate 1.5
	}

}
